<% provide(:title, t('devise.sessions.new.sign_in')) %>
<% provide(:head_title, t('devise.sessions.new.sign_in')) %>

<%= simple_form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <div class="text-right">
      <%= link_to t('devise.passwords.new.forgot_your_password'), new_password_path(resource_name) %>
    </div>

    <%= f.input :remember_me, as: :checkbox_tabler if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.sessions.new.sign_in') , class: 'btn-primary btn-block' %>
  </div>
<% end %>